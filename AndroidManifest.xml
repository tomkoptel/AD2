<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.paad.ad2"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="14"
        android:maxSdkVersion="16"/>

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher">
        <meta-data
            android:name="android.app.default_searchable"
            android:value="com.paad.earthquake.EarthquakeSearchResults"
            />

        <activity
            android:name=".StartUpActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.paad.compass.CompassActivity"/>
        <activity android:name="com.paad.todolist.ToDoListActivity"/>
        <activity android:name="com.paad.contactpicker.ContactPickerActivity">
            <intent-filter>
                <action android:name="android.intent.action.PICK"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data
                    android:path="contacts"
                    android:scheme="content"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.paad.contactpicker.ContactPickerTester"
            android:label="Contact Picker Test"/>
        <activity
            android:name="com.paad.earthquake.EarthquakeActivity"
            android:configChanges="keyboardHidden"/>
        <activity
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:name="com.paad.surfacecamera.SurfaceActivity"/>
        <activity android:name="com.paad.earthquake.PreferencesActivity"/>
        <activity android:name="com.paad.earthquake.FragmentPreferences"/>
        <activity
            android:name="com.paad.earthquake.EarthquakeSearchResults"
            android:label="Earthquake Search"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <provider
            android:name="com.paad.todolist.ToDoContentProvider"
            android:authorities="com.paad.todoprovider"/>
        <provider
            android:name="com.paad.earthquake.EarthquakeProvider"
            android:authorities="com.paad.earthquakeprovider"/>

        <service android:enabled="true" android:name="com.paad.earthquake.EarthquakeUpdateService"/>

        <receiver android:name="com.paad.earthquake.EarthquakeAlarmReceiver">
        <intent-filter>
            <action
                android:name="com.paad.earthquake.ACTION_REFRESH_EARTHQUAKE_ALARM"
            />
        </intent-filter>
    </receiver>
    </application>

</manifest>
